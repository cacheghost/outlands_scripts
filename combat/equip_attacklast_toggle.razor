# If we havent set our weapon, set it.
if not varexist 'weapon_1'
    overhead '[Select Weapon 1]' 
    setvar! 'weapon_1'
endif

# Check if we are casting
if varexist 'weapon_1'
    # Look for weapon to equip
    if find 'weapon_1' 'backpack'
        # Weapon found in backpack.
        if findlayer self lefthand as 'myweapon'
            if 'myweapon' != 'weapon_1'
                # Weapon we are wearing isnt our weapon, change that.
                overhead '[Equip Weapon 1]' 55
                lift 'myweapon'
                drop 'backpack'
                lift 'weapon_1'
                drop self LeftHand
                wait 75
                attack lasttarget
            else
                overhead '[Disarm Weapon 1]' 55
                lift 'weapon_1'
                drop 'backpack'
                warmode off
            endif
        elseif findlayer self righthand as 'myweapon'
            if 'myweapon' != 'weapon_1'
                # Weapon we are wearing isnt our weapon, change that.
                overhead '[Equip Weapon 1]' 55
                lift 'myweapon'
                drop 'backpack'
                lift 'weapon_1'
                drop self RightHand
                wait 75
                attack lasttarget
            else
                overhead '[Disarm Weapon 1]' 55
                lift 'weapon_1'
                drop 'backpack'
                warmode off
            endif
        else
            # Not wearing weapon, equip from backpack
            overhead '[Equip Weapon 1]' 55
            lift 'weapon_1'
            drop self LeftHand
            wait 75
            attack lasttarget
        endif
    else
        # We are not wearing the weapon, and its not in backpack. Unset variable
        if findlayer self lefthand as 'myweapon'
            if 'myweapon' != 'weapon_1'
                overhead '[Unset Weapon 1]' 33
                @unsetvar 'weapon_1'
            else
                overhead '[Disarm Weapon 1]' 55
                lift 'weapon_1'
                drop 'backpack'
                warmode off
            endif
        elseif findlayer self righthand as 'myweapon'
            if 'myweapon' != 'weapon_1'
                overhead '[Unset Weapon 1]' 33
                @unsetvar 'weapon_1'
            else
                overhead '[Disarm Weapon 1]' 55
                lift 'weapon_1'
                drop 'backpack'
                warmode off
            endif
        else
            overhead '[Unset Weapon 1]' 33
            @unsetvar 'weapon_1'
        endif
    endif
endif