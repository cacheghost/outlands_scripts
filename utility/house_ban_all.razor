while not dead
    if not timerexists "skill timer"
        createtimer "skill timer"
    endif

    if timer "skill timer" > 10100
        hotkey 'Cancel Current Target'
        skill 'detectinghidden'
        waitfortarget 5000
        target 'self'
        settimer "skill timer" 0
        pause 100
    endif

    hotkey 'Next Non-Friendly Humanoid Target'
    if not insysmsg "No one matching that was found"
        hotkey 'Cancel Current Target'
        say "i ban thee"
        pause 250
        lasttarget
    endif
    pause 500
    
    hotkey 'Next Innocent Humanoid Target'
    if not insysmsg "No one matching that was found"
        hotkey 'Cancel Current Target'
        say "i ban thee"
        pause 250
        lasttarget
    endif
    pause 500
endwhile