    menu 'tank1' 2
    wait 150
    target 'allkill_target'
    menu 'tank2' 2
    wait 150
    target 'allkill_target'
    menu 'dpspet1' 2
    wait 150
    target 'allkill_target'
    menu 'dpspet2' 2
    wait 150
    target 'allkill_target'
    menu 'dpspet3' 2
    wait 150
    target 'allkill_target'
    menu 'dpspet4' 2
    wait 150
    target 'allkill_target'
else
    menu 'tank1' 1
    wait 150
    target 'allkill_target'
    menu 'tank2' 1
    wait 150
    target 'allkill_target'
    menu 'dpspet1' 1
    wait 150
    target 'allkill_target'
    menu 'dpspet2' 1
    wait 150
    target 'allkill_target'
    menu 'dpspet3' 1
    wait 150
    target 'allkill_target'
    menu 'dpspet4' 1
    wait 150
    target 'allkill_target'
