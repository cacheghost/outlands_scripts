overhead 'All Kill' 44

unsetvar 'allkill_taget'
overhead 'Select all kill target'
setvar! 'allkill_target'

# Tank 1 - 2
wait 150
if not varexist 'tank1'
    overhead 'Select tank pet 1'
    setvar! 'tank1'
endif

if not varexist 'tank2'
    overhead 'Select tank pet 2'
    setvar! 'tank2'
endif

# DPS 1 - 4
if not varexist 'dpspet1'
    overhead 'Select dps pet 1'
    setvar! 'dpspet1'
endif

if not varexist 'dpspet2'
    overhead 'Select dps pet 2'
    setvar! 'dpspet2'
endif

if not varexist 'dpspet3'
    overhead 'Select dps pet 3'
    setvar! 'dpspet3'
endif

if not varexist 'dpspet4'
    overhead 'Select dps pet 4'
    setvar! 'dpspet4'
endif

