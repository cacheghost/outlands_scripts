if targetexists 'beneficial'
    target self
endif

if not varexist 'weapon_3'
    overhead '[Select Wep 3]'
    setvar! 'weapon_3'
endif

overhead '[Equip Wep 3]'
if findlayer self lefthand as 'myweapon'
    lift 'myweapon'
    drop 'backpack'
    lift 'weapon_3'
    drop self LeftHand      
elseif findlayer self righthand as 'myweapon'
    lift 'myweapon'
    drop 'backpack'
    lift 'weapon_3'
    drop self RightHand
else
    lift 'weapon_3'
    drop self LeftHand
endif
