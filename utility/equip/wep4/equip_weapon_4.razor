if targetexists 'beneficial'
    target self
endif

if not varexist 'weapon_4'
    overhead '[Select Wep 4]'
    setvar! 'weapon_4'
endif

overhead '[Equip Wep 4]'
if findlayer self lefthand as 'myweapon'
    lift 'myweapon'
    drop 'backpack'
    lift 'weapon_4'
    drop self LeftHand      
