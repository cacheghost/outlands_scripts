# Check hands.
if not timerexists 'gheal_potion'
    createtimer 'gheal_potion'
    settimer 'gheal_potion' 11001
endif
if hits < maxhits and timer 'gheal_potion' > 11000
    if findlayer self lefthand
        cast 'Unlock'
        wait 250
        hotkey 'Drink Heal'
        cooldown 'Gheal Potion' 11000
        settimer 'gheal_potion' 0
    else
        hotkey 'Drink Heal'
        cooldown 'Gheal Potion' 11000
        settimer 'gheal_potion' 0
    endif
endif
